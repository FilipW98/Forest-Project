<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forest Commercial - kontakt</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,600;1,100&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/d3231c159b.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="./dist/css/main.min.css">
</head>

<body>
    <!-- @include 'dark-nav.kit' -->

    <section class="form" id="contact">
        <div class="form__hero-img">
            <div class="form__hero-shadow"></div>
            <h2 class="form__title">KONTAKT</h2>
        </div>
        <div class="form__box">
            <div class="form__box-map">
                <p class="form__box-heading">Znajdź nas na <span>Google Maps</span>!</p>
                <img class="form__box-img" src="./src/img/google-moja-firma.png" alt="mapa">
            </div>
            <div class="form__contact-data">
                <div id="map"></div>

                <div class="form__adress" id="phone-contact">
                    <h3><i class="fas fa-tree"></i>Forest Company</h3>
                    <p>Ul. Jasnogórska 2 <span>59-013 Kraków</span></p>
                    <div class="phone"> <i class="fas fa-phone"></i> 603 999 121</div>
                </div>
            </div>
        </div>


        <div class="form__contact" id="message">
            <h2 class="form__heading"><i class="fa-solid fa-envelope"></i>Formularz kontaktowy</h2>

            <div class=" form__item form__name">
                <label for="name">Imię i nazwisko:</label>
                <input type="text" id="name">
            </div>

            <div class=" form__item form__mail">
                <label for="mail">Adres email:</label>
                <input type="text" id="mail">
            </div>

            <div class=" form__item form__number">
                <label for="number">Numer telefonu:</label>
                <input type="number" id="number">
            </div>

            <div class=" form__item form__text">
                <label for="text">Treść wiadomości:</label>
                <textarea id="text" cols="30" rows="8"></textarea>
            </div>
            <button class="form__btn">Wyslij</button>
        </div>


    </section>

    <!-- @include 'footer.kit' -->
    <script src="./dist/js/script.min.js"></script>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLwH_b4wPSevvEBCvoXCxlyHjMSsn03KA&callback=initMap&libraries=&v=weekly"
        async></script>
</body>

</html>